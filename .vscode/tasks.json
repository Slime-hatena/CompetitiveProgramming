{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "clang",
            "args": [
                "-g",
                "-o",
                "bin\\${fileBasenameNoExtension}.exe",
                "${file}",
                "&",
                "bin\\${fileBasenameNoExtension}.exe"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "Run PHP",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "php",
            "args": [
                "${workspaceFolder}/${fileBasenameNoExtension}.php"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}